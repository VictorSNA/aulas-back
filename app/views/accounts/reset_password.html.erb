<div class="row px-2 py-2">
  <div class="col-md-12 mb-4 border rounded">
    <div class="row px-2">
      <div class="col-md-12 mb-5">
        <h1 class="display-6">Esqueci a minha senha</h1>
        <%= form_with url: password_reset_path, local: true do |form| %>
          <div class="mb-3 row">
            <%= form.label :email, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= form.text_field :email, class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-12 text-end">
            <%= form.submit 'Enviar email', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
