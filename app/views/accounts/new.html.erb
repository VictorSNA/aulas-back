<div class="col-md-12 mb-4">
  <h1 class="display-4 ms-3">Cadastro</h1>
</div>
<div class="row px-2 py-2">
  <div class="col-md-12 mb-4 border rounded">
    <div class="row px-2">
      <div class="col-md-12 mt-3 mb-3">
        <div class="col-md-12">

          <%= form_with model: @account, local: true do |form| %>
            <h3>Dados pessoais</h3>
            <div class="mb-3">
              <%= form.label :name, class: 'col-form-label' %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: 'col-form-label' %>
              <%= form.text_field :email, class: 'form-control' %>
            </div>

            <div class="mb-3 row">
              <%= form.label :password, class: 'col-sm-1 col-form-label' %>
              <div class="col-sm-5">
                <%= form.text_field :password, class: 'form-control', type: 'password' %>
              </div>
              <%= form.label :password_confirmation, class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-4">
                <%= form.text_field :password_confirmation, class: 'form-control', type: 'password' %>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :cpf, class: 'col-form-label' %>
              <%= form.text_field :cpf, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= form.label :telephone, class: 'col-form-label' %>
              <%= form.text_field :telephone, class: 'form-control' %>
            </div>

            <h3>EndereÃ§o</h3>
            <div class="mb-3 row">
              <%= form.label :cep, class: 'col-sm-1 col-form-label' %>
              <div class="col-sm-5">
                <%= form.text_field :cep, class: 'form-control' %>
              </div>
              <%= form.label :public_place, class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-4">
                <%= form.text_field :public_place, class: 'form-control' %>
              </div>
            </div>

            <div class="mb-3 row">
              <%= form.label :address, class: 'col-sm-1 col-form-label' %>
              <div class="col-sm-6">
                <%= form.text_field :address, class: 'form-control' %>
              </div>
              <%= form.label :address_number, class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-2">
                <%= form.text_field :address_number, class: 'form-control' %>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :complement, class: 'col-form-label' %>
              <%= form.text_field :complement, class: 'form-control' %>
            </div>

            <div class="col-md-12 text-end">
              <%= form.submit 'Cadastrar', id: 'cadastroButton', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
